<div class="container">
    <h1 class="jumbotron">Burger time!</h1>

<h2>Burgers that are ready to eat!</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{this.burger_name}}

            <button type="button" class="btn btn-info change-devoured btn-sm" data-id="{{id}}" data-eat="{{devoured}}">
                Devour it!!
            </button>

        </li>
        {{/unless}}
        {{/each}}
    </ul>



<h2>Burgers that were eaten!</h2>
    <ul>
        {{#each burgers}}
         {{#if devoured}}
            <li>
                {{this.burger_name}}

            

            </li>
         {{/if}}
        {{/each}}
    </ul>


<h2>Enter a burger you want to eat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>


    <button type="submit" class="btn btn-info btn-sm">Add Burger</button>
</form>
</div>
