<h1>Burger time!</h1>

<h2>Burgers that are ready to eat!</h2>
    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
            {{this.burger_name}}

            <button class="change-devoured" data-id="{{id}}" data-eat="{{devoured}}">
                Devour it!!
            </button>

        </li>
        {{/unless}}
        {{/each}}
    </ul>



<h2>Burgers that were eaten!</h2>
    <ul>
        {{#each burgers}}
         {{#if devoured}}
            <li>
                {{this.burger_name}}

            

            </li>
         {{/if}}
        {{/each}}
    </ul>


<h2>Enter a burger you want to eat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

