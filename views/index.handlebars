<h1>Burger time!</h1>

<h2>Burgers that are ready to eat!</h2>

<ul>
    {{#each burgers}}
         {{#unless devoured}}
        <li>
        {{this.burger_name}}

        <button class="change-devoured" data-id="{{id}}" data-eat="{{devoured}}">
            Devour it!!
        </button>

        <button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
      </li>
     {{/unless}}
  {{/each}}
</ul>



<h2>Burgers that were eaten!</h2>

<ul>
    {{#each cats}}
    {{#if sleepy}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Cat Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Add Cat</button>
</form>